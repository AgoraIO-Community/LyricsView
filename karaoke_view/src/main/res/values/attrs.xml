<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LyricsView">
        <attr name="startOfVerseIndicatorPaddingTop" format="dimension" />
        <attr name="startOfVerseIndicatorRadius" format="dimension" />
        <attr name="startOfVerseIndicatorColor" format="reference|color" />
        <attr name="lrcMarginTop" format="dimension" />
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lineSpacing" format="dimension" />
        <attr name="lrcNormalTextSize" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcPastTextColor" format="reference|color" />
        <attr name="lrcFutureTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcLabel" format="string" />
        <attr name="lrcEnableDrag" format="boolean" />
        <attr name="lrcTextGravity">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ScoringView">
        <attr name="pitchIndicatorColor" format="reference|color" />
        <attr name="pitchIndicatorRadius" format="dimension" />
        <attr name="pitchStickHighlightColor" format="reference|color" />
        <attr name="pitchStickHeight" format="dimension" />
        <attr name="pitchDoneTextColor" format="reference|color" />
        <attr name="pitchInitialScore" format="float" />
        <attr name="minimumScore" format="float" />
        <attr name="hitScoreThreshold" format="float" />
        <attr name="offPitchTimeThreshold" format="integer" />
    </declare-styleable>
</resources>
