<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <io.agora.lyrics_view.v11.ScoringView
        android:id="@+id/scoring_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="26dp"
        android:background="#02FFFFFF"
        app:hitScoreThreshold="80"
        app:layout_constraintBottom_toTopOf="@id/lrc_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:minimumScore="40"
        app:pitchDoneTextColor="@color/white"
        app:pitchIndicatorRadius="6dp"
        app:pitchInitialScore="0"
        app:pitchStickHeight="6dp" />

    <io.agora.lyrics_view.v11.LyricsView
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/purple_200"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lrcCurrentTextColor="#FFF44336"
        app:lrcDividerHeight="6dp"
        app:lrcFutureTextColor="#33FFFFFF"
        app:lrcLabel=" "
        app:lrcMarginTop="-10dp"
        app:lrcNormalTextColor="#FFFFFF"
        app:lrcNormalTextSize="12sp"
        app:lrcPastTextColor="#99FFFFFF"
        app:lrcTextGravity="center"
        app:lrcTextSize="20sp" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Play(Mock)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clear_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
